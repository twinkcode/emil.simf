{% extends 'base.html.twig' %}

{% block title %}Продукты{% endblock %}

{% block body %}
    <h1>Продукты</h1>
    <table class="table ">
        <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id|e }}</td>
                <td>{{ product.name|e }}</td>
                <td>{{ product.price|e }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
